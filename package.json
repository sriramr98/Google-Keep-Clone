{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "private": true,
  "description": "A simple react redux boilerplate",
  "repository": {
    "type": "git",
    "url": "git://guthub.com/sriramr98/react-redux-boilerplate"
  },
  "author": {
    "name": "Sriram R",
    "email": "sriramr083@gmail.com",
    "url": "https://github.com/sriramr98/"
  },
  "dependencies": {
    "@material-ui/core": "^4.5.0",
    "@material-ui/icons": "^4.4.3",
    "@material-ui/styles": "^4.5.0",
    "firebase": "^7.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "react-redux": "^7.1.1",
    "react-scripts": "3.2.0",
    "redux": "^4.0.4",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.1",
    "redux-saga-firebase": "^0.15.0",
    "yup": "^0.27.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "yarn run lint -- --fix",
    "prettier:format": "prettier --write \"./src/*.{tsx,ts,css}\"",
    "prettier:check": "prettier \"./src/*.{tsx,ts,css}\" --list-different"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "yarn run prettier:format",
      "yarn run --silent lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/firebase": "^3.2.1",
    "@types/material-ui": "^0.21.7",
    "@types/node": "^12.11.1",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.2",
    "@types/react-redux": "^7.1.5",
    "@types/redux-logger": "^3.0.7",
    "@types/redux-saga": "^0.10.5",
    "@types/yup": "^0.26.24",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2",
    "typescript": "^3.6.4"
  }
}
